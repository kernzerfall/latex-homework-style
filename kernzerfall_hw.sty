% Queries the dirty status of the current project
\directlua{%
    function get_dirty()
        local status = io.popen"git status --porcelain":read'*l'
        return not (status == nil or status == '')
    end

    dirty = get_dirty()
}%

% Prints dirty status as 1/0
\newcommand{\dirty}[0]{%
    \protect\directlua{%
        if dirty then
            tex.print("1")
        else
            tex.print("0")
        end
    }%
}

% Prints "+" if dirty, otherwise nothing
