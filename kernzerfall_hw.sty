% ------ Inject boilerplate ------ %
\newcommand{\kzfl@injectboilerplate}{
    % Geometry
    \usepackage[a4paper, top=2cm, left=2cm, right=2cm]{geometry}

    % Math Symbols
    \usepackage{amsmath}
    \usepackage{amssymb}
    \usepackage{mathtools}
    \usepackage{microtype}
    \usepackage{stmaryrd}

    % Graphics
    \usepackage{tikz}
    \usepackage{graphicx}
    \usepackage{pdfpages}

    \if@kzflenglish
        \usepackage[british]{babel}
    \else
        \usepackage[british, ngerman]{babel}
    \fi

    \usepackage{xcolor}
    \usepackage[no-math]{fontspec}
    \usepackage{unicode-math}

    \defaultfontfeatures{
        Scale=MatchLowercase,
    }

    % Depending on if@mpro, switch to Minion Pro
    \if@kzflmpro
        \setmainfont[Numbers=OldStyle]{MinionPro}
    \else
        \setmainfont[Numbers=OldStyle]{TeX Gyre Pagella}
    \fi

    \setmathfont{TeX Gyre Pagella Math}
    % TGPagellaMath's mathcal letters are weird... Especially 'F'.
    \setmathfont[range={scr,bfscr,cal,bfcal}]{New Computer Modern Math}
    \setsansfont{New Computer Modern Sans 10}
    \setmonofont{New Computer Modern Mono 10}

    % If we're using Minion Pro, override some of TGPagella's Math symbols with it
    % Fontspec is going to complain about Style=Math missing but it's fine
    \if@kzflmpro
        % 44 = Comma, the one from TGPagella looks different
        \setmathfont[range={44}]{MinionPro}
        % mathup = upright math characters (e.g. \operatorname, \mathrm)
        \setmathfont[range=\mathup/{num,latin,Latin,greek,Greek}]{MinionPro}%
        % mathit = normal/italic math characters
        \setmathfont[range=\mathit/{num,latin,Latin,greek,Greek}]{MinionPro-Italic}%
        % These would be needed for bold/boldit math, but they cause some errors and I don't feel
        % like fixing them, especially as I don't even use bold math...
        % \setmathfont[range=\mathbfup/{num,latin,Latin,greek,Greek}]{MinionPro-Bold}%
        % \setmathfont[range=\mathbfit/{num,latin,Latin,greek,Greek}]{MinionPro-BoldItalic}%
    \fi

    % Other
    \usepackage{scrlayer-scrpage}
    \usepackage{draftwatermark}
    \usepackage[capitalize]{cleveref}
    \usepackage{framed}

    % Colors
    \definecolor{codegreen}{rgb}{0,0.6,0}%
    \definecolor{codegray}{rgb}{0.5,0.5,0.5}%
    \definecolor{codepurple}{rgb}{0.58,0,0.82}%
    \definecolor{backcolour}{rgb}{0.95,0.95,0.92}%
    \definecolor{fosapblue}{RGB}{0,128,255}%
    \definecolor{fosappink}{RGB}{252,163,212}%

    % Default to no watermark, user can override this using the same command
    \DraftwatermarkOptions{
        scale=0, text={}
    }

    % KOMA classes have sf fonts in headers by default...
    \ifdef\chapter{
        \setkomafont{chapter}{\normalfont\huge}
        \setkomafont{section}{\normalfont\LARGE}
    }{
        \setkomafont{section}{\normalfont\Large}
    }

    \setkomafont{title}{\normalfont\huge}
    \setkomafont{subsection}{\normalfont\Large}
    \setkomafont{subsubsection}{\normalfont\large}
    \setkomafont{paragraph}{\normalfont\bfseries}
    \setkomafont{subparagraph}{\normalfont\bfseries}
}

% ------ Therorem stuff ------ %
\newcommand{\kzfl@injecttheorems}{
    % this heavily relies on the boilerplate
    \@kzflboilerplatetrue

    % def/thm numbering
    \usepackage[amsmath, amsthm, thmmarks]{ntheorem}
    \theoremheaderfont{\normalfont\bfseries}
    \theorembodyfont{\normalfont}
    \theoremseparator{.}
    \newtheoremstyle{kzflthm}%
        {\item[%
            \hskip\labelsep\theorem@headerfont%
                ####1~####2%
            \theorem@separator]}%
        {\item[%
            \hskip\labelsep\theorem@headerfont%
                ####1~####2~~\normalfont(####3)%
            \theorem@separator]}
    \theoremstyle{kzflthm}
    \theoremsymbol{\ensuremath{\triangle}}

    \newtheorem{definition}{Definition}[section]
    \newtheorem{thm}[definition]{Theorem}
    \newtheorem{satz}[definition]{Satz}
    \newtheorem{lemma}[definition]{Lemma}
    \newtheorem{kor}[definition]{Korollar}
}

